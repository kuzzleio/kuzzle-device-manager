{
  "name": "kuzzle-device-manager",
  "version": "2.0.0-rc1",
  "description": "Manage your IoT devices and assets. Choose a provisioning strategy, receive and decode payload, handle your IoT business logic.",
  "author": "The Kuzzle Team (support@kuzzle.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuzzleio/kuzzle-plugin-device-manager"
  },
  "scripts": {
    "npm:docker": "docker-compose run kuzzle npm",
    "install:docker": "npm run npm:docker install kuzzle",
    "dev:docker": "docker-compose up",
    "prod": "node ./features/fixtures/application/app.js",
    "dev": "NODE_ENV=development npx ergol ./features/fixtures/application/app.ts -c ergol.config.json",
    "test": "npm run test:lint && npm run test:unit && npm run test:functional",
    "test:unit": "mocha",
    "test:functional": "cucumber-js --exit --fail-fast",
    "test:lint": "eslint ./lib --ext .ts --config .eslintrc.json",
    "test:lint:fix": "eslint ./lib --ext .ts --config .eslintrc.json --fix",
    "build": "tsc --build tsconfig.json",
    "clean": "touch index.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "package:create": "npm run build && npm pack"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "csvtojson": "~2.0.10",
    "json-stable-stringify": "^1.0.1",
    "kuzzle-plugin-commons": "https://github.com/kuzzleio/kuzzle-plugin-commons/archive/refs/tags/0.0.9.tar.gz",
    "uuid": "~8.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cucumber": "^6.0.5",
    "ergol": "^1.0.2",
    "eslint": "^8.10.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "kuzzle": "^2.17.6",
    "kuzzle-sdk": "^7.9.1",
    "lodash": "^4.17.21",
    "should": "^13.2.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "kuzzle": "^2.17.3"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json"
  ]
}
