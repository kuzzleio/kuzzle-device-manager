{
  "name": "kuzzle-plugin-device-manager",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "prepare-plugin": "npm run install-plugin && npm run build",
    "install-plugin": "npm install --production && rm -rf node_modules/kuzzle ; ln -s ../../../node_modules/kuzzle node_modules/kuzzle",
    "npm:docker": "docker-compose run kuzzle npm",
    "install:docker": "npm run npm:docker install kuzzle",
    "dev:docker": "docker-compose up",
    "prod": "node ./features/fixtures/application/app.js",
    "dev": "NODE_ENV=development npx nodemon --ignore features --ext 'js,json,ts' --inspect=0.0.0.0:9229 --exec node -r ts-node/register ./features/fixtures/application/app.ts",
    "test": "npm run test:lint && npm run test:unit && npm run test:functional",
    "test:unit": "mocha",
    "test:functional": "cucumber-js --exit --fail-fast",
    "test:lint": "eslint ./lib --ext .ts --config .eslintrc.json",
    "test:lint:fix": "eslint ./lib --ext .ts --config .eslintrc.json --fix",
    "build": "tsc --build tsconfig.json",
    "clean": "touch index.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "package:create": "npm run build && npm pack",
    "doc:prepare": "npx kuzdoc framework:install",
    "doc:dev": "npx kuzdoc repo:dev -d /kuzzle-iot-platform/device-manager/1/ -v 1",
    "doc:build": "npx kuzdoc repo:build -d /kuzzle-iot-platform/device-manager/1/ -v 1",
    "doc:upload": "npx kuzdoc repo:deploy -d /kuzzle-iot-platform/device-manager/1/ -v 1",
    "doc:cloudfront": "npx kuzdoc repo:cloudfront -d /kuzzle-iot-platform/device-manager/1/*",
    "doc:deploy": "npm run doc:upload && npm run doc:cloudfront"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cucumber": "^6.0.5",
    "eslint": "^7.19.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "kuzzle-sdk": "^7.5.3",
    "lodash": "^4.17.20",
    "mocha": "8.2.1",
    "mock-require": "^3.0.3",
    "nodemon": "^2.0.7",
    "rewire": "^5.0.0",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "kuzzle": "^2.9.3",
    "typescript": "^4.1.5"
  },
  "peerDependencies": {},
  "files": [
    "index.js",
    "index.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json"
  ]
}
