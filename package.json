{
  "name": "@kuzzleio/plugin-device-manager",
  "version": "0.4.1",
  "description": "Manage your IoT devices and assets. Choose a provisionning strategy, receive and decode payload, handle your IoT business logic.",
  "author": "The Kuzzle Team (support@kuzzle.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuzzleio/kuzzle-plugin-device-manager"
  },
  "scripts": {
    "npm:docker": "docker-compose run kuzzle npm",
    "install:docker": "npm run npm:docker install kuzzle",
    "dev:docker": "docker-compose up",
    "prod": "node ./features/fixtures/application/app.js",
    "dev": "NODE_ENV=development npx ergol ./features/fixtures/application/app.ts -c ergol.config.json",
    "test": "npm run test:lint && npm run test:unit && npm run test:functional",
    "test:unit": "mocha",
    "test:functional": "cucumber-js --exit --fail-fast",
    "test:lint": "eslint ./lib --ext .ts --config .eslintrc.json",
    "test:lint:fix": "eslint ./lib --ext .ts --config .eslintrc.json --fix",
    "build": "tsc --build tsconfig.json",
    "clean": "touch index.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "package:create": "npm run build && npm pack"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "csvtojson": "~2.0.10",
    "kuzzle-plugin-commons": "git+https://github.com/kuzzleio/kuzzle-plugin-commons.git",
    "uuid": "~8.3.2"
  },
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cucumber": "^6.0.5",
    "ergol": "^1.0.1",
    "eslint": "^7.32.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "kuzzle": "^2.14.5",
    "kuzzle-sdk": "^7.7.6",
    "lodash": "^4.17.21",
    "mocha": "^9.1.2",
    "mock-require": "^3.0.3",
    "rewire": "^5.0.0",
    "should": "^13.2.3",
    "should-sinon": "^0.0.6",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "kuzzle": "^2.14.5"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json"
  ]
}
