{
  "plugins": ["kuzzle", "jest"],
  "extends": [
    "plugin:kuzzle/default",
    "plugin:kuzzle/node",
    "plugin:kuzzle/typescript",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "overrides": [
    {
      "files": ["**/roles/*.ts", "**/collections/*.ts", "**tests/**/*.ts"],
      "rules": {
        "sort-keys": ["off"]
      }
    }
  ]
}
